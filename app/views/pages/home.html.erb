<h1>Homepage</h1>
<hr>
<h2>Blog Posts</h2>
<% if @posts.any? %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="4">Body</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body.truncate(100) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <hr>
  <br>
  <h2>Skills</h2>
  <% if @skills.any? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3">Percent Utilized</th>
        </tr>
      </thead>
      <tbody>
        <% @skills.each do |skill| %>
          <tr>
            <td><%= skill.title %></td>
            <td cols-span="3" style="text-align:center;"><%= skill.percent_utilized %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
<% end %>
